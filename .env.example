# ==============================================
# Python Backend Environment Variables
# ==============================================

# Server Configuration
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration (MySQL)
DATABASE_URL=mysql+mysqlconnector://intelliattend_user:your_secure_password@localhost:3306/intelliattend

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=86400  # 24 hours in seconds
JWT_REFRESH_EXPIRES_IN=604800  # 7 days in seconds

# Session Configuration
SESSION_DURATION_MINUTES=2
QR_REFRESH_INTERVAL_SECONDS=5
QR_TOKEN_EXPIRY_SECONDS=7
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Verification Thresholds
CONFIDENCE_THRESHOLD=0.6
BLE_RSSI_THRESHOLD=-70
GPS_GEOFENCE_RADIUS_METERS=30
MIN_BLE_HITS=2
WARM_SCAN_DURATION_MINUTES=3
SCAN_INTERVAL_SECONDS=30
SCAN_DURATION_SECONDS=12

# Verification Weights
WEIGHT_QR=0.4
WEIGHT_BLE=0.3
WEIGHT_WIFI=0.2
WEIGHT_GPS=0.1

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=*

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================
# Android Mobile App Configuration
# ==============================================
